<% if action == :create %>
  <% action_url = cats_url %>
<% else %>
  <% action_url = cat_url(cat) %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if action == :update %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled <%= cat.color ? "" : "selected" %>>Please Select Color</option>
    <option value="black" <%= cat.color == "black" ? "selected" : "" %>>Black</option>
    <option value="grey" <%= cat.color == "grey" ? "selected" : "" %>>Grey</option>
    <option value="orange" <%= cat.color == "orange" ? "selected" : "" %>>Orange</option>
    <option value="calico" <%= cat.color == "calico" ? "selected" : "" %>>Calico</option>
    <option value="white" <%= cat.color == "white" ? "selected" : "" %>>White</option>
    <option value="other" <%= cat.color == "other" ? "selected" : "" %>>Other</option>
  </select>
  <br>

  <label for="sex">Sex</label>
  <select id="sex" name="cat[sex]">
    <option disabled <%= cat.sex ? "" : "selected" %>>Please Select Sex</option>
    <option value="M" <%= cat.sex == "M" ? "selected" : "" %>>Male</option>
    <option value="F" <%= cat.sex == "F" ? "selected" : "" %>>Female</option>
  </select>

  <br>

  <label for="birth_date">Birthdate</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <br>

  <label for="description">Description</label>
  <textarea name="cat[description]">
    <%= cat.description %>
  </textarea>
  <br>

  <%= button_to 'Submit', action_url, method: action %>
</form>
